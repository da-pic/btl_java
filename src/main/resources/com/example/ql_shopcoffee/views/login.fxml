<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="520.0" prefWidth="400.0" style="-fx-background-color: #2C3E50;" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.ql_shopcoffee.controllers.LoginController">

    <VBox alignment="CENTER" spacing="25.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">

        <padding>
            <Insets bottom="40" left="40" right="40" top="40" />
        </padding>

        <VBox alignment="CENTER" spacing="10.0">
            <Label style="-fx-font-size: 60px;" text="☕" />
            <Label style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: white;" text="COFFEE SHOP" />
            <Label style="-fx-font-size: 14px; -fx-text-fill: #BDC3C7;" text="Hệ Thống Quản Lý" />
        </VBox>

        <VBox spacing="20.0" style="-fx-background-color: white; -fx-background-radius: 10;">
            <padding>
                <Insets bottom="30" left="30" right="30" top="30" />
            </padding>

            <VBox spacing="8.0">
                <Label style="-fx-font-size: 13px; -fx-font-weight: bold; -fx-text-fill: #2C3E50;" text="Tên đăng nhập" />
                <TextField fx:id="usernameField" onAction="#handleLogin" promptText="Nhập username" style="-fx-font-size: 14px; -fx-padding: 10;" />
            </VBox>

            <VBox spacing="8.0">
                <Label style="-fx-font-size: 13px; -fx-font-weight: bold; -fx-text-fill: #2C3E50;" text="Mật khẩu" />
                <PasswordField fx:id="passwordField" onAction="#handleLogin" promptText="Nhập password" style="-fx-font-size: 14px; -fx-padding: 10;" />
            </VBox>

            <Label fx:id="errorLabel" managed="false" style="-fx-font-size: 12px;" textFill="red" visible="false" wrapText="true" />

            <Button fx:id="loginButton" onAction="#handleLogin" onMouseEntered="#handleLoginButtonHover" onMouseExited="#handleLoginButtonExit" prefWidth="Infinity" style="-fx-background-color: #3498DB; -fx-text-fill: white; -fx-font-size: 15px; -fx-font-weight: bold; -fx-padding: 12; -fx-background-radius: 5;" text="Đăng nhập" />

        </VBox>

    </VBox>

</AnchorPane>
